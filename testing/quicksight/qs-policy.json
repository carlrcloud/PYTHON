{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Action": [
          "quicksight:List*",
          "quicksight:Get*",
          "quicksight:Describe*",
          "quicksight:CreateGroupMembership",
          "quicksight:CreateGroup",
          "quicksight:CreateNamespace",
          "quicksight:CreateUser",
          "quicksight:CreateDashboard",
          "quicksight:UpdateDashboard",
          "quicksight:DeleteDashboard",
          "quicksight:UpdateDashboardPermissions",
          "quicksight:CreateDataSource",
          "quicksight:UpdateDataSource",
          "quicksight:DeleteDataSource"
        ],
        "Resource": [
          "arn:aws:quicksight:<region>:<aws_account_id>:namespace/<namespace>",
          "arn:aws:quicksight:<region>:<aws_account_id>:group/<namespace>/*",
          "arn:aws:quicksight:<region>:<aws_account_id>:user/<namespace>/*",
          "arn:aws:quicksight:<region>:<aws_account_id>:dashboard/*",
          "arn:aws:quicksight:<region>:<aws_account_id>:datasource/*"
        ]
      },
      {
        "Effect": "Deny",
        "Action": [
          "quicksight:UpdateDashboardPermissions",
          "quicksight:CreateGroup",
          "quicksight:UpdateGroup",
          "quicksight:DeleteGroup",
          "quicksight:CreateGroupMembership",
          "quicksight:DeleteGroupMembership"
        ],
        "Resource": [
          "arn:aws:quicksight:<region>:<aws_account_id>:namespace/default",
          "arn:aws:quicksight:<region>:<aws_account_id>:group/default/*",
          "arn:aws:quicksight:<region>:<aws_account_id>:user/default/*",
          "arn:aws:quicksight:<region>:<aws_account_id>:dashboard/*",
          "arn:aws:quicksight:<region>:<aws_account_id>:datasource/*"
        ],
        "Condition": {
          "StringEquals": {
            "quicksight:DashboardVisibility": "PUBLIC"
          }
        }
      }
    ]
  }
  